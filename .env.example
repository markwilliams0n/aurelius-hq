# Database
DATABASE_URL=postgres://user:pass@host:5432/aurelius

# Auth
ADMIN_EMAIL=your@email.com
MAGIC_LINK_SECRET=generate-a-32-char-secret

# Email (Resend)
RESEND_API_KEY=re_xxxx

# AI
OPENROUTER_API_KEY=sk-or-xxxx

# Supermemory (long-term memory)
SUPERMEMORY_API_KEY=sm_xxxx
# Container tag to isolate memories (defaults to "default")
SUPERMEMORY_CONTAINER_TAG=mark

# Ollama (local LLM for triage summarization + enrichment)
# OLLAMA_URL=http://localhost:11434
# OLLAMA_MODEL=llama3.2:3b

# App
NEXT_PUBLIC_APP_URL=http://localhost:3333

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Gmail Connector (optional)
# Path to Google Service Account JSON with domain-wide delegation
GOOGLE_SERVICE_ACCOUNT_PATH=/path/to/service-account.json
# Email to impersonate (must be in your Google Workspace domain)
GOOGLE_IMPERSONATE_EMAIL=your@workspace-domain.com
# Set to 'true' to enable actual email sending (default: drafts only)
GMAIL_ENABLE_SEND=false

# Backup System (optional - enables offsite backup to GitHub)
# Path to backup git repo (sibling directory recommended)
BACKUP_REPO_PATH=~/Claude Code/aurelius-backups
# GitHub PAT with repo scope for pushing backups
BACKUP_GITHUB_TOKEN=ghp_xxxx
# GitHub repo for backups (username/repo)
BACKUP_GITHUB_REPO=yourusername/aurelius-backups
